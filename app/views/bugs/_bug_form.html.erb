<%= form_for(@bug) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% @bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, {class: 'form-control', autofocus: 'autofocus'} %>
  </div>
  <div class="form-group">
    <%= f.label :reporter_id %>
    <%= f.collection_select :reporter_id, User.all, :id, :email, {prompt: false}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :assignee_id %>
    <%= f.collection_select :assignee_id, User.all, :id, :email, {prompt: 'Choose...'}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, class: 'form-control' %>
  </div>
  <div class="checkbox">
    <label for="bug_closed">
      <%= f.check_box :closed %>
      Closed
    </label>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
